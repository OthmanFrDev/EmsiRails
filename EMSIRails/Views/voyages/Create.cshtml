@model EMSIRails.Models.voyage

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="wrapper fadeInDown justify-content-center">
        <div id="formContent" class="justify-content-center p-2">
            <h4>Créer un voyage </h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.LabelFor(model => model.GareDepart, "GareDepart", htmlAttributes: new { @class = "control-label col-md-2 fadeIn second" })
            @Html.DropDownList("GareDepart", null, htmlAttributes: new { @class = "form-control fadeIn second" })
            @Html.ValidationMessageFor(model => model.GareDepart, "", new { @class = "text-danger" })

            @Html.LabelFor(model => model.gareArrive, "gareArrive", htmlAttributes: new { @class = "control-label col-md-2 fadeIn second" })
            @Html.DropDownList("gareArrive", null, htmlAttributes: new { @class = "form-control fadeIn second" })
            @Html.ValidationMessageFor(model => model.gareArrive, "", new { @class = "text-danger" })

            @Html.LabelFor(model => model.dateDepart, htmlAttributes: new { @class = "control-label col-md-2 fadeIn second" })
            @Html.EditorFor(model => model.dateDepart, new { htmlAttributes = new { @type = "date", @class = "form-control fadeIn second" } })
            @Html.ValidationMessageFor(model => model.dateDepart, "", new { @class = "text-danger" })

            @Html.LabelFor(model => model.dateArrive, htmlAttributes: new { @class = "control-label col-md-2 fadeIn second" })
            @Html.EditorFor(model => model.dateArrive, new { htmlAttributes = new { @type = "date", @class = "form-control fadeIn second" } })
            @Html.ValidationMessageFor(model => model.dateArrive, "", new { @class = "text-danger" })

            @Html.LabelFor(model => model.HeureDepart, htmlAttributes: new { @class = "control-label col-md-2 fadeIn second" })
            @Html.EditorFor(model => model.HeureDepart, new { htmlAttributes = new { @type = "time", @class = "form-control fadeIn second" } })
            @Html.ValidationMessageFor(model => model.HeureDepart, "", new { @class = "text-danger" })

            @Html.LabelFor(model => model.heureArrive, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.heureArrive, new { htmlAttributes = new { @type = "time", @class = "form-control fadeIn second" } })
            @Html.ValidationMessageFor(model => model.heureArrive, "", new { @class = "text-danger fadeIn second" })

            @Html.LabelFor(model => model.idtrain, "idtrain", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.DropDownList("idtrain", null, htmlAttributes: new { @class = "form-control fadeIn second" })
            @Html.ValidationMessageFor(model => model.idtrain, "", new { @class = "text-danger fadeIn second" })

            <input type="submit" value="Create" class="btn btn-default" />

        </div>
    </div>
}

<div>
